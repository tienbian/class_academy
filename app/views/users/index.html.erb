
<h1>Danh sách học viên</h1>
<%= link_to 'New Member', new_user_path,class: 'btn btn-primary btn-md'%>
<table  class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Avatar</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Birthday</th>
      <th>Facebook</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= image_tag(user.avatar_url, :width => 100) if user.avatar.present? %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= user.birthday %></td>
        <td><%= user.facebook %></td>
        <td><%= link_to 'Show', user ,class: 'btn btn-primary btn-md'%></td>
        <td><%= link_to 'Edit', edit_user_path(user),class: 'btn btn-primary btn-md' %></td>
        <!-- <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger btn-md'%></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>


